<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.bixian365.dzc.fragment.my.store.yhj.NoUseFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/wallet_banklist_lin"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/yhj_nouse_gridv"
            android:listSelector="@null"
            android:numColumns="1"
            android:stretchMode="columnWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            />

    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:id="@+id/wallet_default_coupons_lin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/default_coupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@color/col_999"
            android:textSize="@dimen/ac_text_size_14"
            android:text="当前没有优惠券"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
