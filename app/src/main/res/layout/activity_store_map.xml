<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/all_title_layout"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/app_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/location_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:visibility="visible"
            android:background="#60000000"
            android:id="@+id/main_search_rels"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/main_custom_service_ivs"
                android:layout_toLeftOf="@+id/main_message_ivs"
                android:background="@drawable/search_bg_gray_shap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/check_store_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/ac_text_size_14"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#888888"
                    android:text="查找您所在的区域"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/main_message_ivs"
                android:layout_alignParentRight="true"
                android:src="@mipmap/check_store_location_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:background="@color/app_bg"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/store_map_scrollv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                android:background="@color/app_bg"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#888888"
                        android:textSize="@dimen/ac_text_size_16"
                        android:padding="10dp"
                        android:text="附近门店"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <com.bixian365.dzc.utils.view.ListViewForScrollView
                        android:divider="#00000000"
                        android:dividerHeight="0dip"
                        android:id="@+id/store_map_listv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </com.bixian365.dzc.utils.view.ListViewForScrollView>
                    <ProgressBar
                        android:id="@+id/store_map_probar"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        style="?android:attr/progressBarStyleInverse"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#888888"
                        android:textSize="@dimen/ac_text_size_14"
                        android:padding="10dp"
                        android:text="输入门店信息"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/store_map_input_info_edt"
                        android:maxLines="1"
                        android:textColorHint="@color/col_hint"
                        android:textSize="@dimen/ac_text_size_14"
                        android:hint="如您没有找到相关门店信息，请在此输入您的门店信息"
                        android:padding="10dp"
                        android:background="@drawable/white_round_shap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/map_store_comfirm_btn"
                        android:textSize="@dimen/ac_text_size_18"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:text="@string/comfirm_str"
                        android:background="@drawable/login_button_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
